---
import Layout from "./Layout.astro";

const { frontmatter } = Astro.props;
---

<Layout title={"Vanilla OS" + " - " + frontmatter.title}>
  <main>
    <section class="bg-[#F2F1ED] dark:bg-[#2d2d2d]">
      <div class="grid gap-4 text-center px-5 py-16 container mx-auto">
        <h1 class="text-5xl font-bold lg:text-7xl dark:text-white">
          {frontmatter.title}
        </h1>
        <p class="text-xl lg:text-2xl dark:text-[#c3c3c3]">
          {frontmatter.description}
        </p>
      </div>
    </section>
    <div class="blog-content">
      <slot />
    </div>
  </main>
</Layout>

<style is:global>
  .blog-content {
    @apply container mx-auto px-5 grid gap-3 p-16;
  }

  .blog-content h2 {
    @apply font-bold text-4xl after:content-[''] after:block after:bg-[#ffbf48] after:h-1 after:w-10 after:rounded-lg after:my-2 dark:text-white;
  }

  .blog-content p {
    @apply text-xl dark:text-white;
  }

  .blog-content pre {
    @apply p-6 rounded-md bg-[#282936] text-[#e9e9f4];
  }

  .blog-content pre span {
    @apply text-[#a1efe4];
  }
</style>

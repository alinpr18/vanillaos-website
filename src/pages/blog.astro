      {
        articles.map((article) => {
          const { title, date, content } = article;
          return (
            <div class="px-5 lg:px-0">
              <article class="bg-[#F2F1ED] dark:bg-[#2d2d2d] rounded-xl p-5">
                <h2 class="text-3xl font-bold dark:text-white">{title}</h2>
                <time class="dark:text-white">{date}</time>
                <p class="text-lg my-4 dark:text-white">{content}</p>
                <button class="bg-black rounded-full py-3 px-6 text-white flex gap-3">
                  Read more
                  <span>
                    <FastArrowRight />
                  </span>
                </button>
              </article>
            </div>
          );
        })
      }
    </section>
  </main>

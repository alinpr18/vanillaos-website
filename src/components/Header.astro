---
import { Image } from "@astrojs/image/components";
const navbar = [
  {
    title: "Blog",
    href: "/blog",
  },
  {
    title: "FAQ",
    href: "/faq",
  },
  {
    title: "Community",
    href: "#",
  },
  {
    title: "Documentation",
    href: "#",
  },
  {
    title: "Handbook",
    href: "#",
  },
  {
    title: "Get Involved",
    href: "/get-involved",
  },
];
---

<header class="py-6 top-0 sticky bg-white z-10">
  <div class="flex items-center justify-between px-5 container mx-auto">
    <a href="/">
      <Image
        src="/logos/vanilla-logo.png"
        width={248}
        height={87}
        alt="VanillaOS logo"
        format="webp"
        class="w-32"
      />
    </a>
    <button
      id="menuIcon"
      aria-label="menu"
      class="grid gap-[2px] justify-center w-5 h-full lg:hidden"
    >
      <span aria-hidden="true" class="w-1 h-1 bg-black rounded-full"></span>
      <span aria-hidden="true" class="w-1 h-1 bg-black rounded-full"></span>
      <span aria-hidden="true" class="w-1 h-1 bg-black rounded-full"></span>
    </button>
    <nav
      id="menu"
      class="hidden lg:grid lg:relative lg:top-0 lg:left-0 lg:right-0 fixed top-24 left-3 right-3 p-5 rounded-md drop-shadow-md lg:drop-shadow-none bg-white lg:bg-none"
    >
      <ul
        class="grid lg:grid-flow-col justify-items-center gap-3 lg:gap-7 text-lg"
      >
        {
          navbar.map((page) => {
            const { title, href } = page;
            return (
              <li>
                <a href={href}>{title}</a>
              </li>
            );
          })
        }
      </ul>
    </nav>
  </div>
</header>

<script client:load>
  const $menuIcon = document.querySelector("#menuIcon");
  const $menu = document.querySelector("#menu");
  $menuIcon.addEventListener("click", () => {
    $menu.classList.toggle("hidden");
  });
</script>
